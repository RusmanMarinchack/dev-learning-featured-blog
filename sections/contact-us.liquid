{{ 'contact-us.css' | asset_url | stylesheet_tag }}

{% assign image = section.settings.image %}
{% assign title = section.settings.heading %}

<section class="contact-us" id="contact-us-{{ section.id }}">
    <div class="contact-us__info">
        <div class="contact-us__info-container">
            <div class="contact-us__info-wrapper">
                <div class="contact-us__info-contact">
                    <h4 class="contact-us__info-title">{% if title != blank %}{{ title }}{% else %}Mantraband Store{% endif %}</h4>

                    {% if section.settings.text %}
                        <div class="contact-us__info-subtext">{{ section.settings.text }}</div>
                    {% endif %}

                    <div class="contact-us__info-inner">
                        <div class="contact-us__info-item">
                            {% assign address_icon = section.settings.address_icon %}

                            <div class="contact-us__info-label">

                                {% if address_icon %}
                                    <img class="contact-us__info-label-icon" src="{{ address_icon | image_url }}" alt="{{ address_icon.alt }}">
                                {% endif %}

                                <span class="contact-us__info-label-text">{{ section.settings.address_heading }}</span>
                            </div>
                            <div class="contact-us__info-text">{{ section.settings.address_text }}</div>
                        </div>
                        <div class="contact-us__info-item">
                            {% assign phone_icon = section.settings.phone_icon %}

                            <div class="contact-us__info-label">

                                {% if phone_icon %}
                                    <img class="contact-us__info-label-icon" src="{{ phone_icon | image_url }}" alt="{{ phone_icon.alt }}">
                                {% endif %}

                                <span class="contact-us__info-label-text">{{ section.settings.phone_heading }}</span>
                            </div>
                            <div class="contact-us__info-text">{{ section.settings.phone_text }}</div>
                        </div>
                        <div class="contact-us__info-item">
                            {% assign email_icon = section.settings.email_icon %}

                            <div class="contact-us__info-label">

                                {% if email_icon %}
                                    <img class="contact-us__info-label-icon" src="{{ email_icon | image_url }}" alt="{{ email_icon.alt }}">
                                {% endif %}

                                <span class="contact-us__info-label-text">{{ section.settings.email_heading }}</span>
                            </div>
                            <div class="contact-us__info-text">{{ section.settings.email_text }}</div>
                        </div>

                        <div class="contact-us__info-item">
                            {% assign schedule_icon = section.settings.schedule_icon %}

                            <div class="contact-us__info-label">

                                {% if schedule_icon %}
                                    <img class="contact-us__info-label-icon" src="{{ schedule_icon | image_url }}" alt="{{ schedule_icon.alt }}">
                                {% endif %}

                                <span class="contact-us__info-label-text">{{ section.settings.schedule_heading }}</span>
                            </div>
                            <div class="contact-us__info-text">{{ section.settings.schedule_text }}</div>
                        </div>
                    </div>
                </div>

                {% if image %}
                    <div class="contact-us__info-box-image">
                        <picture>
                            <img src="{{- image | image_url: width: 500 -}}" alt="{{ image.url }}" class="contact-us__info-image">
                        </picture>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</section>

