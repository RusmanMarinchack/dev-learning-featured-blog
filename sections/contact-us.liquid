{{ 'contact-us.css' | asset_url | stylesheet_tag }}

{% assign image = section.settings.image %}
{% assign title = section.settings.heading %}

{% assign google_map = section.settings.google_map_code %}

<section class="contact-us" id="contact-us-{{- section.id -}}">
  <div class="contact-us__info">
    <div class="contact-us__info-container">
      <div class="contact-us__info-wrapper">
        <div class="contact-us__info-contact">
          <h4 class="contact-us__info-title">{%- if title != blank -%}{{- title -}}{%- else -%}Mantraband Store{%- endif
            -%}</h4>

          {%- if section.settings.text -%}
            <div class="contact-us__info-subtext">{{- section.settings.text -}}</div>
          {%- endif -%}

          <div class="contact-us__info-inner">

            {%- if section.settings.address_text != blank -%}
            <div class="contact-us__info-item">
              {%- assign address_icon = section.settings.address_icon -%}

              <div class="contact-us__info-label">

                {%- if address_icon -%}
                <img class="contact-us__info-label-icon" src="{{- address_icon | image_url: width: 24 -}}"
                  alt="{{- address_icon.alt -}}">
                {%- endif -%}

                <span class="contact-us__info-label-text">{{- section.settings.address_heading -}}</span>
              </div>
              <div class="contact-us__info-text">{{- section.settings.address_text -}}</div>
            </div>
            {%- endif -%}

            {%- if section.settings.phone_text != blank -%}
            <div class="contact-us__info-item">
              {%- assign phone_icon = section.settings.phone_icon -%}

              <div class="contact-us__info-label">

                {%- if phone_icon -%}
                <img class="contact-us__info-label-icon" src="{{- phone_icon | image_url: width: 24 -}}"
                  alt="{{- phone_icon.alt -}}">
                {%- endif -%}

                <span class="contact-us__info-label-text">{{- section.settings.phone_heading -}}</span>
              </div>
              <div class="contact-us__info-text">{{- section.settings.phone_text -}}</div>
            </div>
            {%- endif -%}

            {%- if section.settings.email_text != blank -%}
            <div class="contact-us__info-item">
              {%- assign email_icon = section.settings.email_icon -%}

              <div class="contact-us__info-label">

                {%- if email_icon -%}
                <img class="contact-us__info-label-icon" src="{{- email_icon | image_url: width: 24 -}}"
                  alt="{{- email_icon.alt -}}">
                {%- endif -%}

                <span class="contact-us__info-label-text">{{- section.settings.email_heading -}}</span>
              </div>
              <div class="contact-us__info-text">{{- section.settings.email_text -}}</div>
            </div>
            {%- endif -%}

            {%- if section.settings.schedule_text != blank -%}
            <div class="contact-us__info-item">
              {%- assign schedule_icon = section.settings.schedule_icon -%}

              <div class="contact-us__info-label">

                {%- if schedule_icon -%}
                <img class="contact-us__info-label-icon" src="{{- schedule_icon | image_url: width: 24 -}}"
                  alt="{{- schedule_icon.alt -}}">
                {%- endif -%}

                <span class="contact-us__info-label-text">{{- section.settings.schedule_heading -}}</span>
              </div>
              <div class="contact-us__info-text">{{- section.settings.schedule_text -}}</div>
            </div>
            {%- endif -%}

          </div>
          <div class="contact-us__info-box-link">
            <a href="{{- section.settings.button_first_link -}}" class="contact-us__info-link">{{- section.settings.button_first_label -}}</a>
            <a href="{{- section.settings.button_second_link -}}" class="contact-us__info-link btn-white">{{- section.settings.button_second_label -}}</a>
          </div>
        </div>

        {%- if image -%}
        <div class="contact-us__info-box-image">
          <picture>
            <source media="(max-width: 991.98px)"
              srcset="{{- image | image_url: width: 959 -}} 1x, {{- image | image_url: width: 1918 -}} 2x">
            <img src="{{- image | image_url: width: 816 -}}"
              srcset="{{- image | image_url: width: 816 -}} 1x, {{- image | image_url: width: 1632 -}} 2x"
              alt="{{ image.url }}" class="contact-us__info-image">
          </picture>
        </div>
        {%- endif -%}

      </div>
    </div>
  </div>

  {%- if google_map != blank -%}
  <div class="contact-us__map">
    <div class="contact-us__map-container">
      {{- section.settings.google_map_code -}}
    </div>
  </div>
  {%- elsif section.settings.map_image -%}
  <div class="contact-us__map">
    <div class="contact-us__map-container">
      <a href="{{- section.settings.map_link -}}" class="contact-us__map-link">
        <img class="contact-us__map-image" src="{{- section.settings.map_image | image_url: width: 1680 -}}"
          srcset="{{- section.settings.map_image | image_url: width: 1680 -}} 1x, {{- section.settings.map_image | image-url: width: 3360 -}} 2x"
          alt="{{- section.settings.map_image.alt -}}">
      </a>
    </div>
  </div>
  {%- endif -%}

  <div class="contact-us__box-form">
    <div class="contact-us__form-container">

      {% form 'contact', class: "contact-us__form", id: "contact-us-form-1" %}

      <h4 class="contact-us__form-title">{{- section.settings.form_heading -}}</h4>

      {%- if form.posted_successfully? -%}
        <div class="contact-us__form-message">{{- section.settings.home_welcome_message -}}</div>
      {%- endif -%}

      {{- form.errors | default_errors -}}

      <div class="contact-us__form-inner">
        <div class="contact-us__form-item">
          <label class="contact-us__form-label" for="first-name">Name</label>
          <input class="contact-us__form-input" type="text" name="contact[name]" id="name" placeholder="Enter your name" />
        </div>
  
        <div class="contact-us__form-item">
          <label class="contact-us__form-label" for="email">Email</label>
          <input class="contact-us__form-input" type="email" name="contact[email]" id="email" placeholder="john.smith@example.com" />
        </div>
      </div>

      <div class="contact-us__form-item">
        <label class="contact-us__form-label" for="phone">Phone</label>
        <input class="contact-us__form-input" type="tel" name="contact[phone]" id="phone" placeholder="Enter your phone number" />
      </div>

      <div class="contact-us__form-item">
        <label class="contact-us__form-label" for="message">Message</label>
        <textarea class="contact-us__form-text" name="contact[body]" id="message" placeholder="Enter your message"></textarea>
      </div>

      <div class="contact-us__form-submit">
        <input class="contact-us__form-submit-input" type="submit" value="Send a message" />
      </div>
      {% endform %}

    </div>
  </div>
</section>

